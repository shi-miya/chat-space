.main-chat__messages__message
  .main-chat__messages__message__info
    .main-chat__messages__message__info--talker
      = message.user.name
    .main-chat__messages__message__info--created_at
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main-chat__messages__message--chat
    - if message.content.present?
      = message.content
  = image_tag message.image.url, class: 'lower-message__image' if message.image.present?
